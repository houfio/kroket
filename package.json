  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-typescript": "^2.1.0",
    "@types/jest": "^24.9.1",
    "@types/react": "^16.9.19",
    "@types/react-test-renderer": "^16.9.2",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.1",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-react": "^4.2.0",
